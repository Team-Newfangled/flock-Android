<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_deadline_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/deadline_colum"
        android:gravity="center_vertical|center_horizontal"
        android:text="D-10"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_deadline_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:text="디자인"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_deadline_time"
        app:layout_constraintEnd_toEndOf="@+id/item_deadline_time"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_deadline_time"
        app:layout_constraintTop_toTopOf="@+id/item_deadline_time"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/deadline_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/item_deadline_time"
        app:layout_constraintEnd_toEndOf="@+id/item_deadline_time"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="@+id/item_deadline_time"
        app:layout_constraintTop_toBottomOf="@+id/item_deadline_title"
        app:layout_constraintVertical_bias="0.483" />

</androidx.constraintlayout.widget.ConstraintLayout>