<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.project.pid.WritePid">

    <include
        android:id="@+id/write_pid_tool_bar"
        layout="@layout/tool_bar" />

    <include
        android:id="@+id/add_project_back"
        layout="@layout/backbutton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/write_pid_tool_bar"
        app:layout_constraintStart_toStartOf="@+id/write_pid_tool_bar"
        app:layout_constraintTop_toTopOf="@+id/write_pid_tool_bar" />

    <EditText
        android:id="@+id/pid_write_content"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/select_team_rectangle"
        android:elevation="5dp"
        android:hint="내용을 입력하세요"
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp"
        android:gravity="left"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/write_pid_tool_bar" />

    <TextView
        android:id="@+id/write_pid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="작성"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/write_pid_tool_bar"
        app:layout_constraintEnd_toEndOf="@+id/write_pid_tool_bar"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

