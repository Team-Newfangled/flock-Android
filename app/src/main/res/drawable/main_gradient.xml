<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
        <gradient
            android:angle="0"
            android:endColor="#B34295F5"
            android:startColor="#B3C4AFFF"
            android:type="linear" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/white"
                android:type="linear" />
        </shape>
    </item>
</layer-list>